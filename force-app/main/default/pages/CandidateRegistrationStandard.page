     <apex:pageBlockButtons >
         <apex:commandButton value="save" action="{!save}"/>
     </apex:pageBlockButtons>
     
     <apex:pageBlockSection title="My Candidate Bock" columns="1">
     <apex:inputField value="{!APEX_Candidate__c.Salutation__c}"/>
